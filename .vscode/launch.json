  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Ghost.Web/bin/Debug/net7.0/Ghost.Web.dll",
      "args": [
        "--urls=http://0.0.0.0:5120"
      ],
      "cwd": "${workspaceFolder}/Ghost.Web",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
    },
    {
      "name": "Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}